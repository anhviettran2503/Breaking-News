= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :image_url
    = f.text_field :image_url
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :content
    = f.text_area :content
  =fields_for @post_type do |pt|
    .field
      = collection_select(:types, :id, @all_types, :id, :name, {}, {:multiple => true})

  .field
    = f.label :author
    = f.text_field :author
  .actions
    = f.submit 'Save'
